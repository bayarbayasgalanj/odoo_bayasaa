<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record model="ir.module.category" id="module_bb_website_news">
            <field name="name">Scrolling news</field>
            <field name="sequence">20</field>
    </record>
    <record id="group_bb_website_news_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="bb_website_news.module_bb_website_news"/>
    </record>
        

    </data>
    <data noupdate="1">
        <record id="model_bb_website_news_comp_rule" model="ir.rule">
            <field name="name">Own company news view</field>
            <field name="model_id" ref="model_bb_website_news"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</openerp>
