<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="bb_website_news_search" model="ir.ui.view">
        <field name="name">bb.website.news.search</field>
        <field name="model">bb.website.news</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <field name="state"/>
                <filter name="gr_company_id" string="Company" context="{'group_by':'company_id'}"/>
                <filter name="gr_state" string="State" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>
    <record id="bb_website_news_tree" model="ir.ui.view">
        <field name="name">bb.website.news.tree</field>
        <field name="model">bb.website.news</field>
        <field name="arch" type="xml">
            <tree decoration-bf="state=='draft'" decoration-danger="state=='draft'" decoration-muted="state=='done'">
                <field name="name" widget="html"/>
                <field name="company_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="bb_website_news_form" model="ir.ui.view">
        <field name="name">bb.website.news.form</field>
        <field name="model">bb.website.news</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" states="draft" string="To online" class="oe_highlight" type="object"/>
                    <button name="action_draft" states="done" string="To draft" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="name" required="1" widget="html"/>
                    <group col="4">
                        <field name="sequence" required="1"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <group col="4">
                        <button name="delete_line" states="done" string="Remove users" type="object" class="btn-danger"/>
                    </group>
                    <field name="user_ids">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="login"/>
                            <field name="company_id"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_bb_website_news" model="ir.actions.act_window">
        <field name="name">Scrolling news</field>
        <field name="res_model">bb.website.news</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bb_website" name="News" sequence="100" web_icon="bb_website_news,static/description/icon.png" groups="bb_website_news.group_bb_website_news_user"/>
    <menuitem id="menu_bb_website_news" name="News" action="action_bb_website_news" parent="menu_bb_website" sequence="10" groups="bb_website_news.group_bb_website_news_user"/>
</odoo>